{
  // 数据库连接字符串
  "ConnectionStrings": {
    // 默认库连接Id
    "DefaultConnectionId": "Fast",
    // 默认库服务器Ip
    "DefaultServiceIp": "127.0.0.1",
    // 默认库端口号
    "DefaultPort": "1433",
    // 默认库数据库名称
    "DefaultDbName": "Fast.Saas",
    // 默认库数据库用户
    "DefaultDbUser": "sa",
    // 默认库数据库密码
    "DefaultDbPwd": "123456",
    // 默认库服务器类型
    "DefaultDbType": "SqlServer", // MySql 0，SqlServer 1，Sqlite 2，Oracle 3
    // 超时时间，单位秒
    "CommandTimeOut": 60,
    // SqlSugar Sql执行最大秒数，如果超过记录警告日志
    "SugarSqlExecMaxSeconds": 30,
    // 差异日志
    "DiffLog": true,
    // 初始化数据库
    "InitDataBase": false
  },
  // 缓存
  "Cache": {
    // 缓存类型
    "CacheType": "RedisCache", // MemoryCache
    // Redis缓存连接字符串
    "RedisConnectionString": "127.0.0.1:6379,password=,defaultDatabase=2"
  },
  "AllowedHosts": "*",
  "AppSettings": {
    // 是否开启swagger
    "InjectSpecificationDocument": true,
    // 关闭MiniProfiler
    "InjectMiniProfiler": false
  },
  "SystemSettings": {
    // 接口版本
    "ApiVersion": "v1.0.0",
    // Web版本
    "WebVersion": "v1.0.0",
    // 最大请求Body Size，单位是字节（byte） 1kb=1024byte,此处限制512MB
    "MaxRequestBodySize": 536870912,
    // 初始化数据库
    "InitDataBase": true,
    // 初始化接口信息
    "InitApiInfo": true,
    // 同步枚举字典
    "SyncEnumDict": true,
    // 同步应用本地化配置
    "SyncAppLocalization": true,
    // 系统环境
    "Environment": "Development",
    // 演示环境请求禁止行为
    "DemoEnvReqDisable": [ "Add", "Edit", "Delete", "Export", "Import" ]
  },
  // 版权信息
  "CopyrightInfo": {
    // ICP备案编号
    "ICPCode": "陇ICP备2020003856号-2",
    // ICP备案Url
    "ICPUrl": "http://beian.miit.gov.cn/?token=59bd618e-d4d5-4ed9-b5e7-a014213154e8",
    // 公安备案编号
    "PublicCode": "甘公网安备 62090202000505号",
    // 公安备案Url
    "PublicUrl": "http://www.beian.gov.cn/portal/registerSystemInfo?recordcode=62090202000505",
    // 版权信息
    "CRCode": "Copyright © {0} Created by Fast.NET",
    // 版权Url
    "CRUrl": "https://gitee.com/Net-18K/fast.net"
  },
  "SnowId": {
    "WorkerId": "1" // 取值范围0~63,默认1
  },
  // 如果前端不代理的话，又是Axios请求的话，需要添加以下代码
  "CorsAccessorSettings": {
    "WithExposedHeaders": [ "Content-Disposition" ]
  },
  "JWTSettings": {
    "ValidateIssuerSigningKey": true, // 是否验证密钥，bool 类型，默认true
    "IssuerSigningKey": "OXTuaqWnnkuTuGVThcm5Dbm2RlLRk5FVLC55XVZWJBZG1pbBg==", // 密钥，string 类型，必须是复杂密钥，长度大于16
    "ValidateIssuer": true, // 是否验证签发方，bool 类型，默认true
    "ValidIssuer": "Fast", // 签发方，string 类型
    "ValidateAudience": true, // 是否验证签收方，bool 类型，默认true
    "ValidAudience": "Fast", // 签收方，string 类型
    "ValidateLifetime": true, // 是否验证过期时间，bool 类型，默认true，建议true
    "ClockSkew": 5 // 过期时间容错值，long 类型，单位秒，默认5秒
  },
  // 异常配置
  "FriendlyExceptionSettings": {
    "HideErrorCode": true // 隐藏错误码
  },
  // 多语言
  "LocalizationSettings": {
    "SupportedCultures": [ "zh-CN", "en-US" ], // 配置支持的语言列表
    "DefaultCulture": "zh-CN", // 配置默认语言，如果不配置，取 SupportedCultures 的第一项
    "LanguageFilePrefix": "Lang",
    "AssemblyName": "Fast.Core"
  },
  "UploadFile": {
    // 头像
    "Avatar": {
      "path": "Upload/Avatar",
      "maxSize": 1048576,
      "contentType": [ "image/jpg", "image/png", "image/jpeg", "image/gif" ]
    },
    // 富文本
    "Editor": {
      "path": "Upload/Editor",
      "maxSize": 1048576,
      "contentType": [ "image/jpg", "image/png", "image/jpeg", "image/gif" ]
    },
    // 默认
    "Default": {
      "path": "Upload/Default",
      "maxSize": 41943040,
      "contentType": [
        "image/jpg",
        "image/png",
        "image/jpeg",
        "image/gif",
        "image/bmp",
        "text/plain",
        "application/pdf",
        "application/msword",
        "application/vnd.ms-excel",
        "application/vnd.openxmlformats-officedocument.presentationml.presentation"
      ]
    }
  },
  "SpecificationDocumentSettings": {
    "DocumentTitle": "Fast",
    "DocExpansionState": "None",
    "HideServers": true,
    "GroupOpenApiInfos": [
      {
        "Group": "Default",
        "Title": "Fast.NET通用权限管理平台",
