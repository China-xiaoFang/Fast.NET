{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  // 服务集合，True为启用，False为禁用
  "ServiceCollection": {
    // 控制台日志时间格式
    "ConsoleDataTimeFormatter": "yyyy-MM-dd HH:mm:ss(zzz) dddd",
    // 上传文件大小限制
    "LimitUploadedFile": true,
    // 添加Gzip Brotli 压缩
    "GzipBrotliCompression": true,
    // JWT
    "JWT": true,
    // 多语言
    "AppLocalization": true,
    // 接口限流
    "RequestLimit": true,
    // 请求AES解密
    "RequestAESDecrypt": true,
    // 演示环境请求判断
    "DemoEnvironmentRequest": true,
    // 数据验证
    "DataValidation": true,
    // JSON序列化
    "JsonOptions": true,
    // JSON序列化时间格式
    "JsonOptionDateTimeFormat": "yyyy-MM-dd HH:mm:ss",
    // 雪花Id WorkerId
    "SnowIdWorkerId": "1",
    // 即时通讯
    "SignalR": true,
    // 日志文件
    "Log": true,
    // 日志文件格式
    "LogFileFormat": "{0:yyyy}-{0:MM}-{0:dd}",
    // 日志文件大小 控制每一个日志文件最大存储大小，默认无限制，单位是 B，也就是 1024 才等于 1KB
    "LogFileSizeLimitBytes": 10485760, // 10MB
    // 事件总线
    "EventBusService": true,
    // 任务调度
    "Scheduler": true
  }
}